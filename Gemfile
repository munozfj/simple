source 'https://rubygems.org'

ruby '1.9.3'
gem 'rails', '3.2.8'
gem 'jquery-rails'

#Ambientes de Desarrollo y Test
group :development, :test do
  gem 'sqlite3'
end

#Ambiente de Produccion
group :production do
  gem 'pg'
  gem 'thin'
end

# Gems utilizadas solo por los assets
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
  gem 'twitter-bootstrap-rails'
end




